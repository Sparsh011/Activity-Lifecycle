<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    android:background="@color/white">

    <Button
        android:id="@+id/btnSendRequest"
        android:padding="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Request To API"
        app:layout_constraintBottom_toTopOf="@+id/pbDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/pbDialog"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"/>

    <TextView
        app:layout_constraintStart_toEndOf="@+id/pbDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string/loading_dish"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="@+id/pbDialog"
        app:layout_constraintBottom_toBottomOf="@+id/pbDialog"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>